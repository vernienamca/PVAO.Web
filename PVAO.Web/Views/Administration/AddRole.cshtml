@{
    ViewBag.Title = "Add Role";
}

<div class="recent-activity my-listing">
    <div class="act-title">
        <h5><span class="header-text">Add Role</span></h5>
        <p class="breadcrumbs">
            <i class="fa fa-link"></i>
            <a href="/Dashboard/Index">Home</a> / <a href="/Administration/Roles">Roles</a> / <span class="subheader-text">Add Role</span>
        </p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form>
                <p><mark><i>All fields with red asterisk (*) are required to fill.</i></mark></p>
                <br />

                <div id="role-validation-alert" class="alert alert-danger" role="alert">
                    <strong><i class="lnr lnr-bookmark"></i> Please fill-out required fields below.</strong>
                </div>

                <div id="role-updated-alert" class="alert alert-success" role="alert">
                    <strong><i class="lnr lnr-bookmark"></i> Changes has been successfully saved.</strong>
                </div>

                <div class="form-group">
                    <label>Role Name <span>*</span></label>
                    <input id="role-name-text" type="text" class="form-control" placeholder="E.g. Administrator" autofocus>
                </div>
                <div class="form-group">
                    <label>Description <span>*</span></label>
                    <input id="role-description-text" type="text" class="form-control" placeholder="E.g. System Administrator" autofocus>
                </div>
                <button id="save-role-btn" type="submit" class="btn btn-primary"><i class="lnr lnr-thumbs-up"></i> Save Changes</button>
                <br /><br />
                <p class="text-dark">
                    Created By: <span id="role-created-by">n/a</span> &nbsp; Date Created: <span id="role-date-created">n/a</span> &nbsp;
                    Updated By: <span id="role-updated-by">n/a</span> &nbsp; Date Updated: <span id="role-date-updated">n/a</span>
                </p>
            </form>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/administration/role")