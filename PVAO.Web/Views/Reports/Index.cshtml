<div class="recent-activity">
    <div class="act-title">
        <h5>Reports</h5>
        <p class="breadcrumbs">
            <i class="fa fa-link"></i>
            <a href="/Dashboard/Index">Dashboard</a> / <span class="subheader-text">Reports</span>
        </p>

        <br />
    </div>
</div>
<div id="reports-list" class="recent-activity my-listing">
    <div class="row">
        <div id="wrapper" class="col-md-12">
            <section>
                <div class="data-container">
                    <table id="reports-table" class="table table-hover"></table>
                </div>
                <div class="row">
                    <div class="col-md-10"></div>
                    <div class="col-md-2">
                        <div id="pagination-overremittance"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <button id="upload-button" type="button" class="btn btn-success" data-toggle="modal" data-target="#uploadModal"><i class="fa fa-file-upload"></i> Upload </button>
                    </div>

                    <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModal" aria-hidden="true">
                        
                        <div class="modal-dialog" role="document">
                            <form id="reportForm" class="row hero__form v1" enctype="multipart/form-data" method="post">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Upload Report</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <input type="file" class="form-control-file" id="fileUpload">
                                        @*accept="Excel Files|.xls,.xlsx"*@
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">Report Name:</label>
                                        <input type="text" class="form-control" id="reportName">
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">File Path:</label>
                                        <textarea class="form-control" disabled="disabled" id="filePath" title="You can modify the reports path in the configuration."></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button id="saveButton" type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
                <br /><br />
            </section>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/layout")
@Scripts.Render("~/Scripts/reports")
@Scripts.Render("~/Scripts/api")